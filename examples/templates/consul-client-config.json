{
  "bind_addr": "{{ GetPrivateInterfaces | include \"network\" \"10.0.0.0/8\" | attr \"address\" }}",
  "data_dir": "/opt/consul/data",
  "datacenter" :"${deployment_name}",
  "log_level": "INFO",
  "retry_join": [
     "${consul_server_fqdn}:${consul_serf_lan_port}"
  ],
  "node_name": "${node_name}",
  "auto_encrypt": {
     "tls": true
  },
  "leave_on_terminate": true
}