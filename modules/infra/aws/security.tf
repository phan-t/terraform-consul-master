resource "aws_security_group" "allow-ssh-public-inbound" {
  name_prefix = "${var.deployment_id}-allow_ssh_public_inbound-"
  description = "Allow ssh public inbound"
  vpc_id      = module.vpc.vpc_id

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}

